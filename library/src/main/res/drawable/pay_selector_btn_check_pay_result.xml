<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="8dp" />
            <solid android:color="@color/uikit_shape_common_background_unenable" />
            <stroke android:width="1dp" android:color="#858585" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="8dp" />
            <solid android:color="@color/uikit_shape_common_background_pressed" />
            <stroke android:width="1dp" android:color="@color/uikit_colorPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="8dp" />
            <solid android:color="@color/uikit_shape_common_background_normal" />
            <stroke android:width="1dp" android:color="@color/uikit_colorPrimaryDark" />
        </shape>
    </item>

</selector>