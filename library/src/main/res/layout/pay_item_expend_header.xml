<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_remainderNum"
            style="@style/UikitTextView"
            android:minHeight="70dp"
            android:minWidth="30dp"
            android:text="0"
            android:textColor="@color/uikit_text_sub_content"
            android:textSize="50dp" />

        <TextView
            style="@style/UikitTextView"
            android:minHeight="22dp"
            android:minWidth="96dp"
            android:text="@string/pay_remainder_sign_num"
            android:textColor="@color/uikit_text_sub_content"
            android:textSize="@dimen/textFontSize_18" />

        <Button
            android:id="@+id/btn_expend"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/pay_selector_btn_expend_expense"
            android:minHeight="60dp"
            android:text="支付1次签章"
            android:textSize="@dimen/textFontSize_16" />

        <Button
            android:id="@+id/btn_exit"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/pay_selector_btn_expend_exit"
            android:minHeight="60dp"
            android:text="存为草稿退出"
            android:textSize="@dimen/textFontSize_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/uikit_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/uikit_icon_check_black" />

        <TextView
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_marginLeft="10dip"
            android:text="@string/pay_user_read_and_agree"
            android:textColor="@color/uikit_text_sub_content" />

        <TextView
            android:id="@+id/tv_rechargeAgreement"
            style="@style/UikitTextView.Auxiliary.Small"
            android:text="@string/pay_user_pay_agreement"
            android:textColor="@color/uikit_text_sub_content" />

    </LinearLayout>

</LinearLayout>

