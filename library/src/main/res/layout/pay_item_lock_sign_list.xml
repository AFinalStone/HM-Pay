<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/tv_name"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="23dp"
        android:text="名称： " />

    <TextView
        android:id="@+id/tv_name_value"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/tv_name"
        tools:text="借条 ¥3443  " />

    <TextView
        android:id="@+id/tv_contract_id"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="52dp"
        android:text="合同： " />

    <TextView
        android:id="@+id/tv_contract_id_value"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@id/tv_contract_id"
        tools:text="283948575869697  " />

    <TextView
        android:id="@+id/tv_start_time"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="82dp"
        android:text="生成： " />

    <TextView
        android:id="@+id/tv_start_time_value"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="82dp"
        android:layout_toEndOf="@id/tv_contract_id"
        tools:text="2019.06.11 22:58  " />

    <TextView
        android:id="@+id/tv_end_time"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="112dp"
        android:text="占用： " />

    <TextView
        android:id="@+id/tv_end_time_value"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="112dp"
        android:layout_toEndOf="@id/tv_contract_id"
        tools:text="2019.08.11 22:58  " />

    <TextView
        android:id="@+id/tv_lock_sign_num"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="142dp"
        android:text="消耗： " />

    <TextView
        android:id="@+id/tv_lock_sign_num_value"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="142dp"
        android:layout_toEndOf="@id/tv_contract_id"
        tools:text="1个签章" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/uikit_ic_arrow_right" />

    <TextView
        android:id="@+id/tv_status_desc"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/iv_arrow"
        tools:text="未签退回" />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

