<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/pay_selector_bg_item_time_card_recharge_unselect"
    android:gravity="center"
    android:minHeight="60dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timeCardNum"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:textSize="@dimen/textFontSize_14"
        tools:text="5次卡" />

    <TextView
        android:id="@+id/tv_discountsMoney"
        style="@style/UikitTextView"
        android:layout_marginTop="2dp"
        android:textColor="@color/uikit_text_hint"
        android:textSize="@dimen/textFontSize_12"
        tools:text="优惠¥10" />

</LinearLayout>

