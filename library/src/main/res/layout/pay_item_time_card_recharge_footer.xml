<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <Button
        android:id="@+id/tv_firstTry"
        style="@style/UikitButton"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/pay_selector_bg_item_time_card_recharge"
        android:gravity="center"
        android:minHeight="60dp"
        android:text="首次体验 ¥5"
        android:textColor="@color/pay_color_item_time_card_text_selector"
        android:textSize="@dimen/textFontSize_16"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_advertisement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/uikit_bg_pic_loading_place"
        android:minHeight="153dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</LinearLayout>

