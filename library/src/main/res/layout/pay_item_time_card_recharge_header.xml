<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_remainderNum"
            style="@style/UikitTextView"
            android:minHeight="70dp"
            android:minWidth="30dp"
            android:textColor="@color/uikit_text_sub_content"
            android:text="0"
            android:textSize="50dp" />

        <TextView
            style="@style/UikitTextView"
            android:textColor="@color/uikit_text_sub_content"
            android:minHeight="22dp"
            android:minWidth="96dp"
            android:text="@string/pay_remainder_sign_num"
            android:textSize="@dimen/textFontSize_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/uikit_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/uikit_icon_check_black" />

        <TextView
            style="@style/UikitTextView.Auxiliary.Small"
            android:textColor="@color/uikit_text_sub_content"
            android:text="@string/pay_user_read_and_agree"
            android:layout_marginLeft="10dip"
            />

        <TextView
            android:id="@+id/tv_rechargeAgreement"
            style="@style/UikitTextView.Auxiliary.Small"
            android:textColor="@color/uikit_text_sub_content"
            android:text="@string/pay_user_pay_agreement"
            />
    </LinearLayout>

</LinearLayout>

