<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_can_use_num"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_can_use_num"
                style="@style/UikitTextView"
                android:minHeight="70dp"
                android:minWidth="30dp"
                android:text="0"
                android:textColor="@color/uikit_text_sub_content"
                android:textSize="50dp" />

            <TextView
                style="@style/UikitTextView"
                android:minHeight="22dp"
                android:text="@string/pay_can_use_sign"
                android:textColor="@color/uikit_text_sub_content"
                android:textSize="@dimen/textFontSize_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow_can_use_num"
            android:layout_width="5dp"
            android:layout_height="7dp"
            android:src="@mipmap/uikit_ic_arrow_right_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:gravity="center">

            <View style="@style/UikitDivider.Vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_disabled_num"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_disabled_num"
                style="@style/UikitTextView"
                android:minHeight="70dp"
                android:minWidth="30dp"
                android:text="0"
                android:textColor="@color/uikit_text_sub_content"
                android:textSize="50dp" />

            <TextView
                style="@style/UikitTextView"
                android:minHeight="22dp"
                android:text="@string/pay_disable_sign"
                android:textColor="@color/uikit_text_sub_content"
                android:textSize="@dimen/textFontSize_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow_disabled_num"
            android:layout_width="5dp"
            android:layout_height="7dp"
            android:src="@mipmap/uikit_ic_arrow_right_small" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_recharge"
        style="@style/UikitHMButton.Large.Main"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:text="充值2次签章" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="30dp"
        android:background="@color/uikit_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/UikitTextView.Auxiliary.Normal"
            android:layout_marginStart="26dip"
            android:text="充值套餐卡"
            android:textColor="@color/uikit_text_sub_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_recharge_agreement"
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_marginEnd="26dp"
            android:text="《支付协议》"
            android:textColor="@color/uikit_function_remind" />
    </LinearLayout>

</LinearLayout>

