<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bg_gold_rect_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_card_name"
        style="@style/UikitTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/uikit_text_sub_content"
        android:textSize="16dp"
        tools:text="季卡" />

    <LinearLayout
        android:id="@+id/ll_card_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_card_name"
        android:gravity="center_horizontal">

        <TextView
            style="@style/UikitTextView"
            android:text="@string/uikit_money"
            android:textColor="#ffa58672"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_card_money"
            style="@style/UikitTextView"
            android:textColor="#ffa58672"
            android:textSize="30dp"
            tools:text="0.40" />

        <TextView
            style="@style/UikitTextView"
            android:textColor="#ffa58672"
            android:textSize="12dp"
            tools:text="/次" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_card_desc"
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_below="@id/ll_card_money"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dip"
        tools:text="1000次=100元" />

    <TextView
        android:id="@+id/tv_card_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_bg_vipcard_package_tag"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="超值"
        android:textColor="#ffa58672"
        android:textSize="10sp" />

</RelativeLayout>